# Application Settings
PROJECT_NAME="Car Listing Aggregator"
ENVIRONMENT=development
DEBUG=True

# API Settings
API_V1_STR=/api/v1
API_PREFIX=/api

# Security
SECRET_KEY=your-secret-key-change-in-production  # Change this in production
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=car_listings

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# CORS (comma-separated)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Scraping
SCRAPING_INTERVAL_MINUTES=15
SCRAPER_USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"

# Logging
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# Rate Limiting
RATE_LIMIT=100/minute
